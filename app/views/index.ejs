<%if (mainCategory) {%>
<div class="container-fluid p-4 bg-light">
	<div class = "row justify-content-center pt-5">
		<div class = "col-12">
			<h1><%= mainCategory.name %></h1>
			<p><%= mainCategory.page_description %></p>
		</div>
	</div>
</div>
<% }%>


<div class="container <% if(mainCategory){ %> pt-2 <%} else{ %> pt-5 <% }%>">
	<% _.each(categories, function(subcategory) { %>
	<div class="row justify-content-center pt-5">
		<div class="col-8 ">
			<div class="card text-center">
				<% if (subcategory.image) { %>
				<img class="card-img-top" src="/images/<%= subcategory.image%>">
				<% } %>
				<div class="card-body">
					<h1><%= subcategory.name %></h1>
					<p><%= subcategory.page_description %></p>
				</div>
				<a href="/<%= subcategory.id.replace(/-/g,'/') %>" class="btn btn-info">See Products</a>
			</div>
		</div>
	</div>
	<% });%>
</div> <!-- /container -->